<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rihoo.tourguideapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/restaurants_label" >
            <intent-filter>
                <action android:name="android.intent.action.RESTAURANTS" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShootingRangesActivity"
            android:label="@string/shooting_ranges_label" >
            <intent-filter>
                <action android:name="android.intent.action.SHOOTINGRANGES" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BarsActivity"
            android:label="@string/bars_label" >
            <intent-filter>
                <action android:name="android.intent.action.BARS" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HookahLoungesActivity"
            android:label="@string/hookah_lounges_label" >
            <intent-filter>
                <action android:name="android.intent.action.HOOKAHLOUNGES" />
            </intent-filter>
        </activity>

    </application>

</manifest>
